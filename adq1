#include<iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(NULL) {}
};

int getLength(Node* head) {
    int length = 0;
    while (head != NULL) {
        length++;
        head = head->next;
    }
    return length;
}

Node* getIntersectionNode(Node* headA, Node* headB) {
    int lenA = getLength(headA);
    int lenB = getLength(headB);

    // Align both lists to same starting point
    while (lenA > lenB) {
        headA = headA->next;
        lenA--;
    }
    while (lenB > lenA) {
        headB = headB->next;
        lenB--;
    }

    // Move both simultaneously
    while (headA != NULL && headB != NULL) {
        if (headA == headB)  // same address, intersection found
            return headA;
        headA = headA->next;
        headB = headB->next;
    }

    return NULL; // No intersection
}

int main() {
    // Example setup
    Node* newNode;
    Node* head1 = new Node(10);
    Node* head2 = new Node(3);
    newNode = new Node(6);
    Node* node7 = new Node(9);
    Node* node8 = new Node(15);
    Node* node9 = new Node(30);

    // List 1: 10 -> 6 -> 9 -> 15 -> 30
    head1->next = newNode;
    newNode->next = node7;
    node7->next = node8;
    node8->next = node9;

    // List 2: 3 -> 15 -> 30
    head2->next = node8;

    Node* intersection = getIntersectionNode(head1, head2);
    if (intersection != NULL)
        cout << "Intersection Node: " << intersection->data << endl;
    else
        cout << "No intersection" << endl;

    return 0;
}
